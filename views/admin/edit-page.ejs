<%- include('../partials/adminheader.ejs') -%>
<%- include('../partials/adminnavbar.ejs') -%>


<h2 class="page-title">Edit a page</h2>
<a href="/admin" class= "btn btn-primary">Back to all pages</a>
<br><br>
<form action="/admin/edit-page/<%= slug %>" method = "post">
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" name = "title" class = "form-control" value="<%= title %>" placeholder="Title">
    </div>
    <div class="form-group">
        <label for="">Slug</label>
        <input type="text" name = "slug" class = "form-control" value="<%= slug %>" placeholder="Slug">
    </div>
    <div class="form-group">
        <label for="">Content</label>
        <textarea name = "content" cols="30" id="ta" rows="10" class = "form-control" value="<%= content %>" placeholder="Content"></textarea>
    </div>

    <input type="hidden" name="id" value="<%= id %>">
    <button class="btn btn-primary">Submit</button>

</form>


