<%- include('../partials/adminheader.ejs') -%>
<%- include('../partials/adminnavbar.ejs') -%>

<h2 class="page-title">Add a page</h2>
<a href="/admin" class= "btn btn-primary">Back to all pages</a>
<br><br>
<form action="/admin/add-page" method = "post">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name = "title" class = "form-control" value="<%= title %>" placeholder="Title">
    </div>
    <div class="form-group">
        <label for="slug">Slug</label>
        <input type="text" name = "slug" class = "form-control" value="<%= slug %>" placeholder="Slug">
    </div>
    <div class="form-group">
        <label for="content">Content</label>
        <textarea name = "content" id = "ta" cols="30" rows="10" class = "form-control" value="<%= content %>" placeholder="Content"></textarea>
    </div>
    <button class="btn btn-primary">Submit</button>

</form>
<%- include('../partials/adminfooter.ejs') -%>

